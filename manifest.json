{
    "manifest_version": 2,
    "name": "Time Tracker",
    "version": "1.0.0",
    "description": "This Chrome extension tracks the time you spend on a webpage.",
    "author": "Amy Luo",
    "icons": {"128": "icon_128.png"},
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "declarativeContent",
        "tabs",
        "<all_urls>"
    ]
}